<h3>Change your password</h3>

<div class="row">
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, :html => {:role => "form", :class => "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <div class="col-xs-8">
          <%= f.label :password, "New password", :for => "newPassword" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "form-control", :id => "newPassword" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-8">
          <%= f.label :password_confirmation, "Confirm new password", :for => "newPasswordConfirm" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :id => "newPasswordConfirm" %>
        </div>
      </div>

      <div><%= f.submit "Change my password", :class => "btn btn-default" %></div>
    <% end %>
  </div>

  <div class="col-md-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
