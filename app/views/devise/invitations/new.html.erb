<h3><%= t "devise.invitations.new.header" %></h3>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, :class => "form-horizontal"} do |f| %>

<div class="container">
  <div class="row">
    <div class="col-md-8">

      <% if resource.errors.any? %>
        <div id="error_explanation">

          <%= pluralize(@person.errors.count, "error") %> prohibited this post from being saved:
          <ul>
            <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>

        </div>
      <% end %>

      <% resource.class.invite_key_fields.each do |field| -%>

        <div class="form-group">
          <div class="col-xs-8">
            <%= f.label field %>
            <%= f.text_field field, :class => "form-control" %>
          </div>
        </div>

        <% end -%>

        <p><%= f.submit t("devise.invitations.new.submit_button"), :class => "btn btn-default" %></p>
      <% end %>
    </div>
  </div>
</div>
