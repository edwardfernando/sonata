          </li>
          <li <% if params[:controller] == "people" %> class="active" <% end %>>
            <%= link_to "People", people_path %>
          </li>
          <li <% if params[:controller] == "roles" %> class="active" <% end %>>
            <%= link_to "Roles", roles_path %>
          </li>

          <%= render 'partials/login_button' %>
          
        </ul>
      </div>
    </div>
  </div>

