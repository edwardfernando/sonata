<br/><br/>
<table class="table table-hover table-bordered">
    <tr>
        <td width="30%">Ibadah</td>
        <td><%= @schedule.service.name %></td>
    </tr>
    <tr>
        <td>Tanggal</td>
        <td><%= @schedule.service.date %></td>
