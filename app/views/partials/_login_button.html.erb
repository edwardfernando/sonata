<li class="dropdown">
  <% if person_signed_in? %>
    <%= link_to "Logout", destroy_person_session_path %>
  <% elsif %>
    <a class="dropdown-toggle" data-toggle= "dropdown">
      Sign In <span class="caret"></span
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Sign in With Facebook", person_omniauth_authorize_path('facebook') %></li>
      <li><%= link_to "Sign in With Twitter", person_omniauth_authorize_path('twitter') %></li>
    </ul>
  <% end %>
</li>
