<%= form_for @role, :html => {:role => "form"}  do |s| %>

  <div class="form-group">
    <%= s.label :name, :for => "roleName" %>
    <%= s.text_field :name, :class => "form-control", :id => "roleName", :placeholder => "Enter Role Name" %>
  </div>

  <%= s.submit :class => "btn btn-default" %>

<% end %>
